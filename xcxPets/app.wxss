/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.rightIcon{
  margin: auto 0;
}

.rightIcon image{
  width:20px;
  height: 20px;
}

.flex-row{
  flex-direction: row;
}
.flex-column{
  flex-direction: column;
}
.flex{
  display: flex;
  border:1px solid #F2F2F2;
  margin: 0 auto;
  margin-top: 5px;
  width: 90%;
  padding:5px;
  border-radius: 5px;
  box-shadow:0px 1px 1px #D9D9D9 ;
}

.flex-row-between{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
