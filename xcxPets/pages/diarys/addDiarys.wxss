.diarys-text{
  width:100%;
  height: 140px;
  border: 1px solid #F2F2F2;
}
.diarys-text textarea{
  height: 90%;
  width: 97%;
  padding-left:10px;
  padding-right:10px;
  padding-top:10px;
  padding-bottom:10px;
  font-size: 16px;
}

.diarys-place{
  font-size: 16px;
}

.diarys-img-vid{
  width: 100%;
  height:30%;
}

.diarys-img-vid .add-icon{
  width:60px;
  height:60px;
  margin:20px;
}
.add-icon image{
  width:100%;
  height:100%;
}

.saveBtn{
  position: fixed;
  width: 100%;
  height: 40px;
  bottom: 0px;
  background: #54DDB7;
  text-align: center;
  line-height: 40px;
  font-size: 18px;
  color: white;
  letter-spacing: 60px;
  padding-left:10%;
}