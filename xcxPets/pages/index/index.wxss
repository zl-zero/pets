/**userMain 用户顶部布局**/
.userMain{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:100%;
  height: 130px;
  border:1px solid #F2F2F2;
  padding:5px;
}

.userMain .userInfo{
  display: flex;
  flex-direction: row;
  width:100%;
  height:50%;
}

.userHeader{
  width:50px;
  height: 50px;
  border:1px solid black;
  border-radius: 100%;
  margin: 5px;
  margin-left:20px;
}

.userNick{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  width:80%;
  height: 80%;
  margin: 5px;
  text-align: left;
}

.userNick .userNick_sub{
  width:fit-content;
  height: 100%;
  line-height: 50px;
  font-size: 16px;
}

.userNick .userNick_week{
  width:fit-content;
  height: 100%;
  line-height: 50px;
  font-size: 16px;
  padding-right:20px;
}

/**添加事件**/
.userBtp{
  display: flex;
  flex-direction: row;
  border-top:1px solid #F2F2F2;
  height: 24px;
  font-size: 12px;
  text-align: center;
  line-height: 29px;
  padding-top: 2px;
}

.btp_sub1{
  width:33%;
  border-right:1px solid #F2F2F2;
}

.btp_sub2{
  width:33%;
border-right:1px solid #F2F2F2;
}

.btp_sub3{
  width:33%;
  border:0;
}

/**我的宠物、健康提醒**/

.pets{
  width:100%;
  height: 90px;
  padding:5px;
  margin-top: 5px;
}

.myPets{
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  border-top:1px solid #F2F2F2;
  height: 30px;
}

.petsTitle{
  display: flex;
  flex-direction: row;
  margin-left: 5px;
  margin-left:20px;
}

.petsTitle image{
  width:18px;
  height:18px;
  margin-top:5px;
}

.petsTitle view{
  font-size: 12px;
  line-height: 30px;
  margin-left:5px;
}

.petsIcon image{
  width:22px;
  height: 22px;
  margin-right:10px;
  margin-top:5px;
}

/**健康提醒**/
.healthsTitle image{
  margin-top:5px;
}

.healthsTitle view{
  line-height: 30px;
}

.healthsIcon image{
  margin-top:5px;
}

/**我的日记**/
.diary{
  border-bottom: 1px solid #F2F2F2;
}
