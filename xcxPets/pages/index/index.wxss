/**userMain 用户顶部布局**/
.userMain{
  width:90%;
  height: 130px;
  border:1px solid #F2F2F2;
  padding:5px;
  margin-top: 5px;
  border-radius: 5px;
  box-shadow:0px 1px 1px #D9D9D9 ;
}

.userMain .userInfo{
  display: flex;
  flex-direction: row;
  width:100%;
  height:50%;
}

.userHeader{
  width:15.5%;
  height: 80%;
  border:1px solid black;
  border-radius: 100%;
  margin: 5px;
}

.userNick{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  width:80%;
  height: 80%;
  border:1px solid black;
  margin: 5px;
  text-align: left;
}

.userNick .userNick_sub{
  width:fit-content;
  height: 100%;
  border:1px solid black;
  line-height: 50px;
  font-size: 16px;
}

.userNick .userNick_week{
  width:fit-content;
  height: 100%;
  line-height: 50px;
  font-size: 16px;
  padding-right:20px;
}

/**我的宠物、健康提醒**/

.pets{
  width:90%;
  height: 60px;
  border:1px solid #F2F2F2;
  padding:5px;
  margin-top: 5px;
  border-radius: 5px;
  box-shadow:0px 1px 1px #D9D9D9 ;
}

.myPets{
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  border-bottom:1px solid #F2F2F2;
  height: 28px;
}

.petsTitle{
  display: flex;
  flex-direction: row;
  margin-left: 5px;
}

.petsTitle image{
  width:18px;
  height:18px;
  margin-top:2px;
}

.petsTitle view{
  font-size: 14px;
  line-height: 26px;
  margin-left:5px;
}

.petsIcon image{
  width:22px;
  height: 22px;
}

/**健康提醒**/
.myHealths{
  border:0px;
}

.healthsTitle image{
  margin-top:8px;
}

.healthsTitle view{
  line-height: 36px;
}

.healthsIcon image{
  margin-top:8px;
}

