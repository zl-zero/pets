.userHeader{
  justify-content: space-between;
  height:50px;
}
.petsTitle{
  margin: auto 0;
  margin-left:10px;
  font-size: 16px;
}

.userRight{
  display: flex;
  flex-direction: row;
}
.userImage{
  width:40px;
  height: 40px;
  border: 1px solid black;
  margin: auto 0;
  margin-right: 5px;
  border-radius: 100%;
}
.userImage image{
  width:100%;
  height: 100%;
  border-radius: 100%;
}

.petsInfo{
  height: 280px;
}

.petsNick{
  border-bottom:1px solid #F2F2F2;
  height: 40px;
}
.petsNick image{
  margin-top:5px;
}
.petsName{
  margin:auto 0;
  font-size:16px;
  margin-right: 5px;
}

.model{
  position:  fixed;
  border:1px solid black;
  width:100%;

  margin:auto 0;
  font-size:16px;
  margin-right: 5px;
}

/**
*模态框
*/
.model{
  position:  fixed;
  border:0;
  width:100%;
  height:100%;
  box-sizing: border-box;
  background-color: darkgrey;
  opacity: 0.5;
}

.model-view{
  width:70%;
  height:18%;
  margin: 0 auto;
  margin-top: 40%;
  border-radius: 2%;
  background-color: white;
}


